<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenSa.ViewController.PartieGolf.Game.ClubSelectionInGamePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Selectionnez votre Club"
            HorizontalOptions="CenterAndExpand"
            FontAttributes="Bold"/>
            <ListView x:Name="ListClubsPartie" 
                  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Tapped="onClubClicked"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>